{
  "manifest_version": 3,
  "name": "hdrezka.zen",
  "description": "Удаляет все комментарии на HDrezka.",
  "version": "2.0.3",
  "author": "Samael Lovecraft",
  "browser_specific_settings": {
    "gecko": {
      "id": "{3a0863d6-f30f-437c-8e98-348f7186ab01}"
    }
  },
  "action": {
    "default_title": "Познать дзэн.",
    "default_icon": "icons/zen@512.png"
  },
  "icons": {
    "48": "icons/zen@48.png",
    "512": "icons/zen@512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://rezka.ag/*",
        "*://hdrezka.ag/*",
        "*://hdrezka.cm/*",
        "*://hdrezka.club/*",
        "*://hdrezka.sh/*",
        "*://hdrezka.me/*",
        "*://hdrezka.tv/*",
        "*://hdrezka.co/*",
        "*://hdrezka.ink/*",
        "*://hdrezka.buzz/*",
        "*://hdrezka.loan/*",
        "*://hdrezka.center/*",
        "*://hdrezka.city/*",
        "*://hdrezka.fyi/*",
        "*://hdrezka.run/*",
        "*://hdrezka.lol/*",
        "*://hdrezka.today/*",
        "*://hdrezka.win/*",
        "*://hdrezka.tips/*",
        "*://hdrezka.vip/*",
        "*://hdrezka.gift/*",
        "*://hdrezka.link/*",
        "*://hdrezka.solutions/*",
        "*://rezkily.com/*",
        "*://rezka-ua.tv/*",
        "*://rezka-ua.org/*",
        "*://rezka.fi/*"
      ],
      "js": ["zen.js"]
    }
  ],
  "homepage_url": "https://github.com/samaellovecraft/hdrezka.zen"
}
